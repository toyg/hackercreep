{

    "description": "Merging Pinboard.in and HackerNews to bring about Armageddon.",
    "manifest_version": 2,
    "name": "HackerCreep",
    "version": "1.0",
    "homepage_url": "https://blog.pythonaro.com",

    "permissions": [
        "activeTab",
        "storage",
        "*://hn.algolia.com/*"
    ],

    "content_scripts": [
        {
            "matches": ["https://pinboard.in/*"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "web_accessible_resources": [
        "icons/loader.gif",
        "icons/favicon.ico"
    ],

    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    }
}
