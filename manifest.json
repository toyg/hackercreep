{

  "description": "Merging Pinboard.in and HackerNews to bring about Armageddon.",
  "manifest_version": 2,
  "name": "HackerCreep",
  "version": "1.0",
  "homepage_url": "https://blog.pythonaro.com",

  "applications": {
    "gecko": {
      "id": "hackercreep@pythonaro.com",
      "strict_min_version": "45.0.0"
    }
  },
  
  "content_scripts": [
      "matches": ["*://*.pinboard.in/*"],
      "js": ["content.js"]
  ]
  
  "web_accessible_resources": [
    "icons/loader.gif",
    "icons/favicon.ico"
  ]
}
